<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hu.filedownandup.MainActivity">

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start" />

    <Button
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pause" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel" />

    <Button
        android:id="@+id/fore_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fore_start" />

    <Button
        android:id="@+id/fore_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fore_pause" />

    <Button
        android:id="@+id/fore_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fore_cancel" />

    <Button
        android:id="@+id/goto_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />
</LinearLayout>
